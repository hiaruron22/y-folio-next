generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // XAMPPの場合
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())  // 内部的に使うユーザーID
  name      String?
  email     String?  @unique
  phone     String?
  address    String?
  birthday  DateTime?
  accounts  Account[]  // 複数のSNSログインを紐づけられる
  portfolios Portfolio[]
}

model Account {
  id            String   @id @default(cuid())
  provider      String   // "google", "github", "twitter" など
  providerUserId String   // Googleならsub, GitHubならid など
  userId        String

  user          User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerUserId]) // プロバイダごとに一意
}

model Portfolio {
  id          String   @id @default(uuid())
  userId      String
  university  String
  faculty     String
  grade       String
  email       String
  selfIntroduction String
  skillTags   String   // JSON文字列で保存
  certifications String
  projects    String   // JSON文字列で保存
  experience  String   // JSON文字列で保存
  other       String   // JSON文字列で保存
  publication String   // JSON文字列で保存
  visibilitySettings String // JSON文字列で保存
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}